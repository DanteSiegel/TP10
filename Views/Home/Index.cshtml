@model List<Serie>

@{
    ViewBag.Title = "Series";
}

<div>
    <h1>Nombre del Sitio</h1>
    <img src="ruta-del-logo.jpg" alt="Logo">
    <p>Slogan del Sitio</p>
</div>

<div>
    @foreach (var serie in Model)
    {
        <div class="card">
            <img src="@Url.Content(serie.ImagenSerie)" alt="Imagen de la serie">
            <h2>@serie.Nombre</h2>
            <a href="#" class="info-link" data-info="@serie.Sinopsis">Link a Información</a>
            <a href="#" class="temporadas-link" data-temporadas="@serie.Id">Link a Temporadas</a>
            <a href="#" class="actores-link" data-actores="@serie.Id">Link a Actores</a>
        </div>
    }
</div>

<!-- Modal para mostrar información -->
<div id="infoModal" class="modal">
    <div class="modal-content">
        <span class="close" id="infoModalClose">&times;</span>
        <h2>Información de la Serie</h2>
        <p id="infoModalContent"></p>
    </div>
</div>

<!-- Agregar modales para Temporadas y Actores -->

<script src="site.js"></script>
